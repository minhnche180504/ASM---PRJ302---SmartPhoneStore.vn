<?xml version="1.0" encoding="UTF-8"?>
<project name="PhoneStore" default="dist" basedir=".">

    <!-- Cấu hình thư viện classpath -->
   <path id="classpath">
    <fileset dir="lib">
        <include name="jaxb-api-2.3.1.jar"/>
        <include name="jaxb-impl-2.3.1.jar"/>
    </fileset>
</path>


    <!-- Mục tiêu tạo thư mục build/classes -->
    <target name="init">
        <mkdir dir="build/classes"/>
    </target>

    <!-- Mục tiêu biên dịch mã nguồn -->
    <target name="compile" depends="init">
        <javac srcdir="src" destdir="build/classes" classpathref="classpath"/>
    </target>

    <!-- Mục tiêu làm sạch build cũ -->
    <target name="clean">
        <delete dir="build"/>
    </target>

    <!-- Mục tiêu đóng gói thành JAR -->
    <target name="dist" depends="compile">
        <jar destfile="build/PhoneStore.jar" basedir="build/classes"/>
    </target>

    <!-- Mục tiêu để chạy ứng dụng -->
    <target name="run" depends="dist">
        <java jar="build/PhoneStore.jar" fork="true"/>
    </target>

</project>
